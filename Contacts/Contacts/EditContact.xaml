<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Contacts.EditContact">
    <ContentPage.Content>

            <StackLayout Margin="20, 20, 20, 0">

                <Label Text="First Name:"/>

        <Entry x:Name="FirstNameEntry"
               Placeholder="First name"/>

                <Label Text="Surname:"/>

        <Entry x:Name="SurnameEntry"
               Placeholder="Surname"/>

                <Label Text="Email:"/>

        <Entry x:Name="EmailEntry"
               Placeholder="Email"/>

                <Label Text="Mobile number:"/>

        <Entry x:Name="MobileEntry"
               Placeholder="Mobile number"
               Keyboard="Numeric"/>

                <Label Text="Address:"/>

        <Entry x:Name="AddressEntry"
               Placeholder="Address"/>

        <Button Text="Update"
                x:Name="updateButton"
                Clicked="updateButton_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
