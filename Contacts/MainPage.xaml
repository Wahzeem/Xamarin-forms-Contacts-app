<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Contacts.MainPage">


    <StackLayout Margin="20, 20, 20, 0">

        <Entry x:Name="FirstNameEntry"
               Placeholder="First name"/>

        <Entry x:Name="SurnameEntry"
               Placeholder="Surname"/>

        <Entry x:Name="EmailEntry"
               Placeholder="Email"/>

        <Entry x:Name="MobileEntry"
               Placeholder="Mobile number"
               Keyboard="Numeric"/>

        <Entry x:Name="AddressEntry"
               Placeholder="Address"/>

        <Button Text="save"
                x:Name="saveButton"
                Clicked="saveButton_Clicked"/>

    </StackLayout>

   

</ContentPage>